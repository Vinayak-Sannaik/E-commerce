<!-- views/products.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product List</title>
  <style> 
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f0f0f0;
    }

    #productContainer {
      margin-bottom: 15px;
    }

    .productItem {
      display: flex;
      flex-direction: column;
      margin-bottom: 15px;
    }

    header {
      background-color: #007bff;
      color: #fff;
      text-align: center;
      padding: 20px;
    }

    main {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
      color: #007bff;
      text-align: center;
    }

    form {
      display: flex;
    }

    label {
      font-weight: bold;
      margin-bottom: 5px;
      color: #007bff;
    }

    input[type="text"],
    input[type="number"] {
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button {
      width: 200px;
      padding: 10px 20px;
      margin-bottom: 20px;
      margin-left: 200px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:active {
      background-color: #003c80;
    }
  </style>
</head>
<body>
  <header>
    Ecommerce
  </header>
  <main>
    <h1>Product List</h1>
    <div class="product-list">
      <% prod.forEach((product) => { %>
        <div class="product-item">
          <h2><%= product.name %></h2>
          <p>Quantity: <%= product.quantity %></p>
          <form method="post" action="/productUp/<%= product._id %>?_method=PUT">
            <input type="number" name="newQuantity" value="<%= product.quantity %>" min="0">
            <button type="submit">Update Quantity</button>
          </form>
        </div>
      <% }); %>
    </div>
  </main>
</body>
</html>
